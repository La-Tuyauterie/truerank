{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "outDir": "./dist",  // Specify the output directory
    "rootDir": "./src", // Specify the root directory of input files
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}